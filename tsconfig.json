{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "strictNullChecks": false,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        }
    }
}
